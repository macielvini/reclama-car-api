{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "dist",
    "noImplicitAny": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "moduleResolution": "node",
    "rootDirs": ["src", "tests"]
  },
  "include": ["src", "tests"],
  "ts-node": {
    "esm": true
  }
}
